@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h1 class="text-center font-weight-light my-4">Giriş Yap</h1></div>
                                <div class="card-body">
                                    @using (Html.BeginForm("GirisYap", "Home", FormMethod.Post))
                                    {
                                        <div class="form-group">
                                            <label>Ekip Ad :</label>
                                            @*<span asp-validation-for="UserName" class="text-danger"></span>*@
                                            <input type="text" name="UserName" class="form-control" placeholder="Ekip Ad" required />
                                        </div>
                                        <div class="form-group">
                                            <label>Şifre :</label>
                                            @*<span asp-validation-for="Password" class="text-danger"></span>*@
                                            <input type="password" name="Password" class="form-control" placeholder="Şifre" required />
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" name="RememberMe" class="form-check-input mt-1" />
                                                <label class="form-check-label">Beni Hatırla</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="mt-3 text-danger"></div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="btn btn-link" asp-controller="Home" asp-action="KayitOl">Ekip Olarak Katılmak İster Misin?</a>
                                            <input type="submit" class="btn btn-info btn-primary mr-2 mb-1" value="Giriş Yap" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>



