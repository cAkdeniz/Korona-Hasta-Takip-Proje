@model List<AciliyetListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    <div class="row">
        <div class="text-center text-danger font-weight-bold col-md-12">
            <h1>Aciliyet Listesi</h1>
        </div>
    </div>
    <table class="table table-hover ">
        <thead class="text-center" style="color:black">
            <tr>
                <th><h3><b>Tanım</b></h3></th>
                <th><h3><b>İşlem</b></h3></th>
            </tr>
        </thead>
        <tbody class="text-center" style="background-color:white">
            @foreach (var item in Model)
            {
                <tr>
                    <td><h5 style="color:black">@item.Tanim</h5></td>
                    <td>
                        <a asp-action="GuncelleAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id"
                           class="btn btn-warning" style="background-color:darkorange;color:black"><h6>Düzenle</h6></a>
                        <a asp-action="SilAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id" onclick="return confirm('Silmek İstediğinizden Emin Misiniz ?')"
                           class="btn text-center" style="background-color:red;color:black"><h6>Sil</h6></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center lead mt-4">
        <p>
            <h3>Sistemde kayıtlı aciliyet bulunamadı.</h3>
        </p>
        <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-primary my-2">Yeni Aciliyet Ekle</a>
    </div>
}

