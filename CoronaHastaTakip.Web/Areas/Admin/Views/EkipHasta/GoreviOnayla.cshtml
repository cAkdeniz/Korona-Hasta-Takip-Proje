@model GorevlendirEkipListViewModel
@{
    ViewData["Title"] = "GoreviOnayla";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card border border-primary shadow ml-2">
                <h4 class="text-center lead pt-2" style="font:bold"><h1 class="text-center" style="color:green">Hasta Bilgileri</h1></h4>
                <div class="card-body pl-3">
                    <h4 class="text-center" style="color:black">Kimlik No: @Model.Hasta.KimlikNo</h4>
                    <br />
                    <strong style="color:blue">Ad Soyad: </strong> <small style="font-size:large;color:black">@Model.Hasta.AdSoyad</small>
                    <br />
                    <br />
                    <strong style="color:blue">Yaş: </strong> <small style="font-size:large;color:black">@Model.Hasta.Yas</small>
                    <br />
                    <br />
                    <p class="card-text" style="color:black;font-size:large">@Model.Hasta.Aciklama</p>
                    <p class="card-text">
                        <strong style="color:blue">Aciliyet Durumu: </strong> <span class="badge badge-danger" style="font-size:large">@Model.Hasta.Aciliyet.Tanim</span>
                    </p>
                    <strong style="color:blue">Test Tarihi: </strong> <small style="font-size:large;color:black">@Model.Hasta.TestTarihi.ToString("D")</small>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card border border-primary mb-3 p-2 mr-2">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/Assets/img/Team.png" class="card-img img-thumbnail shadow" style="height:15rem!important" alt="@Model.AppUser.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title text-center" style="color:black;font-size:x-large">@Model.AppUser.UserName</h5>
                            <p class="card-text">
                                <strong style="color:blue">Ekip Sorumlusu: </strong> <small style="font-size:large;color:black">@Model.AppUser.Name @Model.AppUser.Surname</small>
                            </p>
                            <p class="card-text">
                                <strong style="color:red"><UserIdHastaGetir app-user-id="@Model.AppUser.Id"></UserIdHastaGetir></strong>
                            </p>
                            <p class="card-text">
                                <strong style="color:blue">E-mail: </strong> <small style="font-size:large;color:black">@Model.AppUser.Email</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-5">
            <form class="text-center" asp-action="EkipGorevlendir" method="post">
                <h3 style="color:black">Yukarıdaki görevi seçilen personele atamak istediğinizden emin misiniz ?</h3>
                <div class="form-group mt-3">
                    <a asp-action="EkipGorevlendir" asp-route-id="@Model.Hasta.Id" class="btn btn-warning">Hayır Vazgeç</a>
                    <input type="hidden" name="UserId" value="@Model.AppUser.Id" />
                    <input type="hidden" name="HastaId" value="@Model.Hasta.Id" />
                    <button class="btn btn-primary">Evet, Görevlendir</button>
                </div>
            </form>
        </div>
    </div>

